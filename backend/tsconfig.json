{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node", "jest", "express"]
  },
  "include": ["src/**/*"]
} 